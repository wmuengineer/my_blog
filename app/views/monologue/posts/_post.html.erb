<div class="post-preview">
  <section data-tags="<%= post.tags.map(&:name).join(' ') %>">
    <h2 class="post-title"><%= link_to post.title, post.full_url %></h2>
    <h3 class="post-subtitle"> <%= truncate_html(strip_tags(post.content), length: 100, omission: '...') %></h3>
    <p class="post-meta">Posted by <%= post.user.name %> on <%= I18n.localize(post.published_at.to_date, format: :long) %> </p>
  </div>
  <div  class="post-meta" data-monologue="tags">
    <span>Tags: <%= render post.tags %> |</span>
  </div>
  <%= link_to t(".readmore"), post.full_url, class: "button" %>
  </section>
<hr>
